{
  "name": "@czarsimon/httpclient",
  "version": "0.8.0",
  "description": "Http client with reties based on axios",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "check-format": "prettier --check \"src/**/*.ts\" \"src/**/*.js\"",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CzarSimon/httpclient.git"
  },
  "author": "Simon Lindgren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CzarSimon/httpclient/issues"
  },
  "homepage": "https://github.com/CzarSimon/httpclient#readme",
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/uuid": "^3.4.6",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4",
    "wait-for-expect": "^3.0.1"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@czarsimon/circutbreaker": "^1.0.0",
    "@czarsimon/remotelogger": "^0.9.0",
    "cross-fetch": "^3.0.4",
    "uuid": "^3.3.3"
  }
}
